
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Assets/auth/icomoon/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Style -->
    <link href="~/Assets/auth/auth.css" rel="stylesheet" />
    <title>Đăng ký tài khoản - Công ty TNHH Gia Thái DOCTORLOAN</title>
</head>
<body>
    <div class="d-lg-flex auth">
        <div class="contents order-2 order-lg-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-12 frm-body">
                        <h3>Đăng ký tài khoản</h3>
                        <div class="sub-tt">Vui lòng nhập thông tin để tạo tài khoản</div>
                        <form class="row needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="username" class="req">Email/ Số điện thoại</label>
                                <input type="text" class="form-control" placeholder="Nhập số điện thoại hoặc email" id="username" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập email hoặc số điện thoại.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="req">Mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu" id="password" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập mật khẩu.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="passwordconfirm" class="req">Nhập lại mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Nhập lại mật khẩu" id="passwordconfirm" required />
                                <div class="invalid-feedback">
                                    Mật khẩu không trùng khớp.
                                </div>
                            </div>

                            <div class="">
                                <button type="submit" class="btn btn-submit">Đăng ký</button>
                            </div>
                        </form>

                        <div class="frm-different">
                            <span class="hr-or"><small>Hoặc</small></span>
                            <button type="button" class="login-with-google-btn">
                                <span>Tiếp tục với Google</span>
                            </button>
                            <div class="redirect-action">Đã có tài khoản? <a href="@Url.Action("Login","Auth")">Đăng nhập</a></div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","Home")"><img class="logo-auth" src="~/Assets/auth/img/logo-single.svg" /></a>
            <div class="copyright-auth">&copy; DOCTORLOAN @DateTime.Now.Year</div>
        </div>
        <div class="bg-auth order-1 order-lg-2">
            <img class="img-auth-main" src="~/Assets/auth/img/auth-img-main.svg" />
            <img class="img-auth-top-right" src="~/Assets/auth/img/top-right.svg" />
            <img class="img-auth-bottom-left" src="~/Assets/auth/img/bottom-left.svg" />
        </div>
    </div>
    <script src="~/Assets/auth/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/libs/Bootstrap/popper.min.js"></script>
    <script src="~/Assets/libs/Bootstrap/bootstrap.min.js"></script>

    <script type="text/javascript">
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>
</html>